#!/bin/sh

# Switch between native playerctl commands and cmus-remote commands.  Uses
# a trivial logic that is sufficient for me.

cr=cmus-remote
sk=$XDG_RUNTIME_DIR/cmus-socket

[ -z $1 ] && exit 1

# cmus process is running
if [ -S $sk ]; then
	case "$1" in
		next)
			$cr --next
		;;
		previous)
			$cr --prev
		;;
		play-pause)
			$cr --pause
		;;
		stop)
			$cr --stop
		;;
	esac
else
	playerctl $1
fi

exit $?
