###############################################################################
# Paths
###############################################################################
set folder           = ~/.mail               # mailbox location
set alias_file       = ~/.mutt/alias         # where to store aliases
set header_cache     = ~/.mutt/cache/headers # where to store headers
set message_cachedir = ~/.mutt/cache/bodies  # where to store bodies
set certificate_file = ~/.mutt/certificates  # where to store certs
set mailcap_path     = ~/.mutt/mailcap       # entries for filetypes
set tmpdir           = ~/.mutt/temp          # where to keep temp files
# set signature        = ~/.mutt/-- 
source ~/.mutt/smime.rc
# Path to GPG include
source ~/.mutt/gpg.rc
# Suck in alias file
source ~/.mutt/alias

###############################################################################
# GPG, SMTP and security
###############################################################################

# GPG passphrase timeout
set pgp_timeout=600

# Always encrypt GPG MINE and not inline
unset pgp_autoinline

# Reply to GPG msgs inline
unset pgp_replyinline

# Automatically send GPG as MIME if inline fails
set pgp_mime_auto

# Do not Automatically encrypt messages with GPG
set pgp_autoencrypt = no

#set pgp_encrypt_only_command
#set pgp_encrypt_sign_command

# My key for signing
set pgp_sign_as=0x2AA88ED1

# My SMTP servers
set smtp_url="smtps://mutt@alpha.xosc.org@xosc.org:465"

# Force TLS for all outgoing conns
set ssl_force_tls
# Do not use SSLv2
#unset ssl_use_sslv2

# Wrapper script
set my_smtp_pass=`/usr/bin/pass Mail/mutt_alpha_xosc_org`
set smtp_pass=$my_smtp_pass

# Don't wait to enter mailbox manually
#unset imap_passive
# Automatically poll subscribed mailboxes for new mail (new in 1.5.11)
#set imap_check_subscribed

# When  set,  mutt  will avoid implicitly marking your mail as read whenever
# you fetch a message from the server.
unset imap_peek

# When set, mutt will attempt to use the IMAP IDLE extension to check for new
# mail in the current mailbox.
set imap_idle

# This  variable specifies the maximum amount of time in seconds that mutt will
# wait before polling open IMAP connections, to prevent the server from closing
# them before mutt has finished with them
set imap_keepalive=300

###############################################################################
# Charset and mailbox settings
###############################################################################

set spoolfile	= "+xosc.de/INBOX.general.inbox"
# Other special folders.
set mbox		= "+xosc.de/INBOX"
set postponed	= "+xosc.de/INBOX.Drafts"
set record		= "+xosc.de/INBOX.Sent"

mailboxes +xosc.de/INBOX \
