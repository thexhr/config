# URL colors
color body brightblue black "((ftp|http|https)://|(file|mailto|news):|www\\.)[-a-z0-9_.:]*[a-z0-9](/[^][{} \t\n\r\"<>()]*[^][{} \t\n\r\"<>().,:!])?/?"
#color body white brightblue "((ftp|http|https)://|(file|mailto|news):|www\\.)[-a-z0-9_.:]*[a-z0-9](/[^][{} \t\n\r\"<>()]*[^][{} \t\n\r\"<>().,:!])?/?"

# Color of the string <URL:foobar> in the body
color body brightblue     black  "<URL:.*>"

# Color of smileys in the body
color body yellow black	" >?[;:][-^]?[][)(><}{|/DP][)}]*"
#color body yellow black	"(>From )|(:[-^]?[][)(><}{|/DP])"

# Color for *fat* text in the body
color body brightred black  "\\*+[^\\*]+\\*+"

# Color of mail-adresses in the body
color body brightblue black  "<[-a-z_0-9.+]+[- ]at[- ][-a-z_0-9.]+>"
color body brightblue black  "[-a-z_0-9.+]+@[-a-z_0-9.]*"

# Color for _underline_ text in the body
color body brightwhite black  "(\ )+_+[^_]+_(\ )+"

# Border lines.
color body blue black "( *[-+=#*~_]){6,}"

# GPG
color body brightblack black  "^gpg:.*"


