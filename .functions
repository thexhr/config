# collection of shell functions found in dot_files, wikis, etc
# around the world.

function mkcd()
{
	[[ $1 ]] || return 0
	[[ -d $1 ]] || mkdir -vp "$1"
	[[ -d $1 ]] && builtin cd "$1"
}

function cget()
{
	curl -OL --compressed "$@"
}

function ipif()
{
		if grep -P "(([1-9]\d{0,2})\.){3}(?2)" <<< "$1"
		then
			curl ipinfo.io/"$1"
		else
			local ipadd=$(host "$1") &&
			local ipawk=$(awk '{ print $4 }' <<< "$ipadd")
			curl ipinfo.io/"$ipawk"
		fi
		echo
}

function calc()
{
	echo "scale=3;$@" | bc -l
}

function cds()
{
	cd "$1" && ls -la
}

